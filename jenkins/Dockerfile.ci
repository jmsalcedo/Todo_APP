FROM python:3.14-slim

ENV DEBIAN_FRONTEND=noninteractive \
    UV_CACHE_DIR=/root/.cache/uv

# 1. Dependencias de sistema y Docker CLI
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl ca-certificates postgresql-client && \
    curl -fsSL https://download.docker.com/linux/static/stable/x86_64/docker-29.1.3.tgz | tar xvz && \
    mv docker/docker /usr/local/bin/ && rm -rf docker && \
    rm -rf /var/lib/apt/lists/*

# 2. Instalar uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

WORKDIR /app

# 3. CACHÃ‰ DE DEPENDENCIAS: 
# Copiamos solo los archivos de dependencias para crear una capa pesada pero fija
COPY pyproject.toml uv.lock ./
RUN uv sync --frozen --no-install-project

# 4. Instalar Trivy
RUN curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b /usr/local/bin